@model EstagiosDEIS.Models.RegisterViewModel

<!DOCTYPE HTML>
    <html>
    <head>
        <title>Pooled Admin Panel Category Flat Bootstrap Responsive Web Template | Sign Up :: w3layouts</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="keywords" content="Pooled Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
        <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
        <!-- Bootstrap Core CSS -->
        <link href=@Url.Content("/Content/css/bootstrap.min.css") rel='stylesheet' type='text/css' />
        <!-- Custom CSS -->
        <link href=@Url.Content("/Content/css/style.css") rel='stylesheet' type='text/css' />
        <link rel="stylesheet" href=@Url.Content("/Content/css/morris.css") type="text/css" />
        <!-- Graph CSS -->
        <link href=@Url.Content("/Content/css/font-awesome.css") rel="stylesheet">
        <link rel="stylesheet" href=@Url.Content("/Content/css/jquery-ui.css")>
        <!-- jQuery -->
        <script src="js/jquery-2.1.4.min.js"></script>
        <!-- //jQuery -->
        <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css' />
        <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
        <!-- lined-icons -->
        <link rel="stylesheet" href=@Url.Content("/Content/css/icon-font.min.css") type='text/css' />
        <!-- //lined-icons -->
    </head>
    <body>
        <div class="main-wthree">
            <div class="container">
                <div class="sin-w3-agile">
                    <h2>Registro</h2>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="username">
                        <span class="username">Nome de Utilizador:</span>
                        <!--<input type="text" name="name" class="name" placeholder="" required="">-->
                        <input @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        <div class="clearfix"></div>
                    </div>
                        <div class="username">
                            <span class="username">Email:</span>
                            <!--<input type="text" name="email" class="name" placeholder="" required="">-->
                            <input @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            <div class="clearfix"></div>
                        </div>
                        <div class="password-agileits">
                            <span class="username">Password:</span>
                            <!--<input type="password" name="password" class="password" placeholder="" required="">-->
                            <input @Html.PasswordFor(m => m.Password, new { @class = "form-control" })>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            <div class="clearfix"></div>
                        </div>
                        <div class="password-agileits">
                            <span class="username">Confirme Password:</span>
                            <!--<input type="password" name="password" class="password" placeholder="" required="">-->
                            <input @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            <div class="clearfix"></div>
                        </div>
                        <div class="username">
                            <span class="username">Perfil:</span>
                            @Html.DropDownList("UserRoles", (SelectList)ViewBag.Perfis, "Seleccione Perfil", new { @class = "username" })
                            <div class="clearfix"></div>
                        </div>
                        <div class="login-w3">
                            <input type="submit" class="login" value="Registar">
                        </div>
                        <div class="clearfix"></div>
                    }
                    <div class="back">
                        <a>@Html.ActionLink("Voltar ao Início", "Index", "Home")</a>
                    </div>
                    <div class="footer">
                        <p>&copy; 2016 Pooled . All Rights Reserved | Design by <a href="http://w3layouts.com">W3layouts</a></p>
                    </div>
                </div>
                    
                </div>
        </div>
                   
        <div>@RenderBody()</div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </body>
</html>
